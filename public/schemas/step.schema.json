    "title": {
      "type": "string"
    },
    "kind": {
      "type": "string",
      "enum": [
        "text",
        "form",
        "review"
      ]
    },
    "html": {
      "type": "string"
    },
    "md": {
      "type": "string"
    }
  },
  "additionalProperties": true
}